.actions
    container(1170px)
    +below(479px)
        padding 0 10px


    &__list
        list-style none
        font-size 0
        text-align center
        padding 0
        margin 0

    &__item
        display inline-block
        vertical-align top
        max-width 570px
        position relative
        border 1px solid #fff
        overflow hidden
        margin 5px
        position relative

    &__img
        width 100%
        max-width 575px
        height auto
        transition all 0.3s ease

        ^[0]__item:hover &
            transform rotate(-1deg) scale(1.1)
            opacity 0.9
    &__title
        display inline-block
        position absolute
        top 10px
        left 0px
        background-color rgba(34, 183, 234, 0.52)
        color #fff
        font(Light)
        font-size 20px
        line-height 1.2
        text-transform uppercase
        text-align left
        padding 5px 25px
        margin 0
        +below(479px)
            top 0
            font-size 16px
            padding 5px 10px

