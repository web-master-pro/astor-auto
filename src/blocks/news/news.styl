.news
    display block
    width 100%

    &__header
        width 100%
        display flex
        flex-flow row wrap
        justify-content space-between

    &__title
        color #4168b9
        font(Condensed)
        font-size 24px
        line-height 1
        text-transform uppercase
        margin 0 .5em 1em 0
        flex 0 0 auto

    &__all
        color #5adefb
        font()
        font-size 12px
        line-height 1
        text-decoration underline
        flex 0 0 auto
        &:hover
            color @color
            text-decoration underline

    &__list
        list-style none
        font-size 0
        padding 0
        margin 0

    &__item
        display flex
        flex-flow row nowrap
        justify-content space-between
        padding 0
        margin 0 0 20px

    &__img
        display block
        flex 0 0 auto
        align-self flex-start

    &__info
        flex 1 1 auto
        padding-left 15px
        +above(992px)
            padding-left 40px

    &__time
        display block
        color #b5b5b5
        font()
        font-style normal
        font-size 12px
        margin 0 0 10px

    &__caption
        color #4168b9
        font(Condensed)
        font-size 16px
        line-height 1
        text-transform uppercase
        margin 0 0 10px

    &__descr
        color #fff
        font()
        font-size 12px
        line-height 1.2
        margin 0 0 10px

    &__more
        display block
        color #5adefb
        font(Light)
        font-size 10px
        line-height 1
        text-align right
        text-decoration underline
        &:hover
            color @color
            text-decoration underline
